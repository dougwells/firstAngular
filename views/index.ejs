<!--when see TestApp in angular, refers to this code-->

<html ng-app="TestApp">
	<head>
		<title>The MEAN stack</title>
    	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.js"></script>
	</head>
	
<!--This ng-controller is for manipulating elements w/in body body tag
  .."as vm" -> set "this" to vm-->
	<body ng-controller="MainController as vm" />
		<input ng-model="vm.message">
		{{vm.message}}
		
		<li ng-repeat="person in vm.people">
			{{person.name}}
		</li>
		
		<!--Node delivers this code to browser but does not process it since a static asset
		Rather, this code is executed by the BROWSER.-->
		<script src = '/assets/js/app.js'></script>
		
	</body>
	
</html>